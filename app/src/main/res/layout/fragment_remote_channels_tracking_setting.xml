        android:layout_marginRight="3dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/remote_tracking_fragement_Y_I" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/remote_tracking_fragement_edt_Y_D"
        android:background="@drawable/sel_edit_text"
        android:textColor="@color/btn_TXT_GREY_DARK"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:hint="@string/remote_tracking_fragement_Y_D_hint"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false"
        android:layout_alignBaseline="@+id/remote_tracking_fragement_Y_D"
        android:layout_toEndOf="@+id/remote_tracking_fragement_Y_I"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/remote_tracking_fragement_Y_D"
        android:layout_alignRight="@+id/remote_tracking_fragement_Y_D"
        android:layout_alignStart="@+id/remote_tracking_fragement_edt_Y_P"
