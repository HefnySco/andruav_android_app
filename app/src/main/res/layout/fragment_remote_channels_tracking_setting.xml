        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/remote_tracking_fragement_Y_P"
        android:inputType="phone" />

    <TextView
        style="@style/generalLabelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remote_tracking_fragement_Y_I"
        android:id="@+id/remote_tracking_fragement_Y_I"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginRight="3dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/remote_tracking_fragement_Y_P" />

