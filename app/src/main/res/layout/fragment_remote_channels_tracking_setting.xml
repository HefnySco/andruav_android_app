        android:gravity="center_horizontal"
        android:background="@color/btn_TXT_BLUE"
        android:textColor="@color/btn_TXT_WHITE"
        android:layout_marginRight="3dp"
        android:layout_below="@+id/remote_tracking_fragement_X_D"
        android:layout_marginTop="30dp" />


    <TextView
        style="@style/generalLabelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remote_tracking_fragement_Y_P"
        android:id="@+id/remote_tracking_fragement_Y_P"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/remote_tracking_fragement_Y_Section_section" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/remote_tracking_fragement_edt_Y_P"
        android:background="@drawable/sel_edit_text"
        android:textColor="@color/btn_TXT_GREY_DARK"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:hint="@string/remote_tracking_fragement_Y_P_hint"
