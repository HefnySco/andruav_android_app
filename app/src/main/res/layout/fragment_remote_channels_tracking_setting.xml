        android:layout_toEndOf="@+id/remote_tracking_fragement_X_I"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/remote_tracking_fragement_X_D"
        android:layout_alignRight="@+id/remote_tracking_fragement_X_D"
        android:layout_alignStart="@+id/remote_tracking_fragement_edt_X_P"
        android:layout_alignLeft="@+id/remote_tracking_fragement_edt_X_P"
        android:inputType="phone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/remote_tracking_fragement_Y_Section"
        android:id="@+id/remote_tracking_fragement_Y_Section_section"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
