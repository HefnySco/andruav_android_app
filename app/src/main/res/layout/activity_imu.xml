<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_calibrate"
            android:id="@+id/imuactivity_btnCalibrate"
            android:layout_margin="2dp"
            android:drawableLeft="@drawable/sensor_acc_w_32x32"
            android:background="@drawable/button_shap" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen_front"
            android:id="@+id/imuactivity_btnMobileDirection"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/button_shap"
            android:drawableLeft="@drawable/arrow_up_w_32x32" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_zeroTilt"
        android:id="@+id/imuactivity_btnZeroTilt"
        android:layout_margin="2dp"
        android:drawableLeft="@drawable/angle_w_32x32"
        android:background="@drawable/button_shap" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fpvactivity_imgSnapShot"
        android:background="@color/btn_TXT_BLUE"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/separator"
        android:layout_gravity="center_horizontal"
        android:minHeight="1dp"
        android:maxHeight="1dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/txtimuAcc" />
    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/edtimuTextLog"
        android:layout_weight="1"
        android:enabled="false"
        android:background="@drawable/edit_text_roundededge"
        android:inputType="text|textMultiLine"
        android:textAlignment="gravity"
        android:singleLine="false"
        android:gravity="left|top" />

</LinearLayout>