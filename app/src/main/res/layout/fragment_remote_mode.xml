<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ap.andruav_ap.activities.remote.RemoteModeFragment"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RC TX-Mode"
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:background="@color/btn_TXT_BLUE"
            android:textColor="@color/btn_TXT_WHITE"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false" />

        <ImageButton
        android:id="@+id/fragment_remote_mode_btnMode1"
        android:background="@drawable/sel_button_color"
        android:drawableLeft="@drawable/rx_mode1_w"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/rx_mode1_w"
        android:layout_marginRight="3dp"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="3dp"
        android:layout_margin="10dp"
            android:layout_below="@+id/textView5" />

        <ImageButton
            android:id="@+id/fragment_remote_mode_btnMode2"
            android:background="@drawable/sel_button_color"
            android:drawableLeft="@drawable/rx_mode1_w"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/rx_mode2_w"
            android:layout_alignTop="@+id/fragment_remote_mode_btnMode1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp" />

        <ImageButton
            android:id="@+id/fragment_remote_mode_btnMode3"
            android:background="@drawable/sel_button_color"
            android:drawableLeft="@drawable/rx_mode1_w"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/rx_mode3_w"
            android:layout_toEndOf="@+id/fragment_remote_mode_btnMode2"
            android:layout_alignLeft="@+id/fragment_remote_mode_btnMode1"
            android:layout_below="@+id/fragment_remote_mode_btnMode1"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/fragment_remote_mode_btnMode4"
            android:background="@drawable/sel_button_color"
            android:drawableLeft="@drawable/rx_mode1_w"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/rx_mode4_w"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/fragment_remote_mode_btnMode2"
            android:layout_alignTop="@+id/fragment_remote_mode_btnMode3"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:focusableInTouchMode="false"
            android:layout_marginRight="3dp"
            android:layout_marginTop="0dp" />


    </RelativeLayout>
</ScrollView>
