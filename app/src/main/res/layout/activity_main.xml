<ScrollView
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_btn_IMU"
                android:id="@+id/btnIMU"
                android:layout_weight="0.50"
                android:layout_margin="2dp"
                android:background="@drawable/sel_big_button_color"
                android:textColor="@color/btn_TXT_COLOR"
                android:drawableLeft="@drawable/gyro_w"
                android:drawableStart="@drawable/gyro_w" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_activity_btn_FPV"
                    android:id="@+id/btnFPV"
                    android:clickable="false"
                    android:layout_weight="0.50"
                    android:layout_margin="2dp"
                    android:background="@drawable/sel_big_button_color"
                    android:textColor="@color/btn_TXT_COLOR"
                    android:drawableLeft="@drawable/fpv_w"
                    android:drawableStart="@drawable/fpv_w" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_activity_btn_COM"
                    android:id="@+id/btnCommServer"
                    android:layout_weight="0.50"
                    android:layout_margin="2dp"
                    android:background="@drawable/sel_big_button_color"
                    android:textColor="@color/btn_TXT_COLOR"
                    android:drawableLeft="@drawable/com_w"
                    android:drawableStart="@drawable/com_w"
                />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_activity_btn_MAP"
                    android:layout_weight="0.50"
                    android:layout_margin="2dp"
                    android:background="@drawable/sel_big_button_color"
                    android:textColor="@color/btn_TXT_COLOR"
                    android:drawableLeft="@drawable/earth_w"
                    android:drawableStart="@drawable/earth_w" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_btn_FCB"
                android:id="@+id/btnFCB"
                android:layout_weight="0.50"
                android:layout_margin="2dp"
                android:background="@drawable/sel_big_button_color"
                android:textColor="@color/btn_TXT_COLOR"
                android:drawableLeft="@drawable/connection_w"
                android:drawableStart="@drawable/connection_w"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_btn_DATA"
                android:id="@+id/btnData"
                android:layout_weight="0.50"
                android:layout_margin="2dp"
                android:background="@drawable/sel_big_button_color"
                android:textColor="@color/btn_TXT_COLOR"
                android:drawableLeft="@drawable/statistics2_w"
                android:drawableStart="@drawable/statistics2_w"
                />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/mainactivity_txtAccessCode"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"
            android:hint="@string/main_activity_hint_access"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/mainactivity_txtUdpProxy"
            android:layout_gravity="bottom"
            android:layout_weight="0.50"
            android:hint="@string/main_activity_hint_telem"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </LinearLayout>
    </ScrollView>

