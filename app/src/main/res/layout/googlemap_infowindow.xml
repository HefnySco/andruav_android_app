<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="fill_horizontal|fill_vertical">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="wrap_content">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/googlemap_infowindow_txtUnitID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:padding="2dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/btn_TXT_BLUE"
        android:contentDescription="@string/separator"
        android:maxHeight="1dp"
        android:minHeight="1dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/googlemap_infowindow_txtDetails"
        android:layout_alignLeft="@+id/googlemap_infowindow_txtUnitID"
        android:layout_alignStart="@+id/googlemap_infowindow_txtUnitID"
        android:autoText="false"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="2dp"
        android:padding="2dp" />
</RelativeLayout>
</LinearLayout>