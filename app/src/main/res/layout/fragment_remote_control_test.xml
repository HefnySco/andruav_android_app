<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Remote.RemoteControlTestFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/remotecontrolactivity_readings"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/remotecontrolactivity_remotecontrolwidget"
            android:layout_alignStart="@+id/remotecontrolactivity_remotecontrolwidget"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <rcmobile.FPV.activities.remote.RemoteControlWidget
            android:id="@+id/remotecontrolactivity_remotecontrolwidget"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</FrameLayout>
